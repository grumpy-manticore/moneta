---
import HTML from './html.astro';
import Head from './head.astro';
import Nav from './nav.astro';

import { main } from './styles.css';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<HTML>
  <Head title={title} />
  <body>
    <Nav />
    <main class={main}>
      <slot />
    </main>
  </body>
</HTML>
